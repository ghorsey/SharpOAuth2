@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<ul>
    <li>
        <h3>Authorization Code</h3>
        @Html.ActionLink("Redirect Flow", "RedirectFlow")
    </li>
    <li>
        <h3>Implicit Grant</h3>
        @Html.ActionLink("Implicit Flow", "ImplicitFlow")
    </li>
    <li>
        <h3>Client Credentials</h3>
        @Html.ActionLink("Issue Client Access Token", "ClientCredentials")
    </li>
    <li>
        <h3>Refresh Token</h3>
        @Html.ActionLink("Refresh a token", "RefreshToken")
    </li>
    <li>
        <h3>Resource Owner Password Credentials</h3>
        @using (Html.BeginForm("ResourceOwnerPassword", "Home"))
        {
            <ul>
                <li>
                    <label for="username">Username (geoff):</label>
                    <input type="text" name="username" id="username" />
                </li>
                <li>
                    <label for="password">Password (password):</label>
                    <input type="password" id="password" name="password" />
                </li>
                <li>
                    <button type="submit">Submit</button>
                </li>
            </ul>
        }
    </li>
</ul>